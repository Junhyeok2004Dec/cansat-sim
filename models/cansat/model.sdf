<?xml version="1.0" ?>
<sdf version="1.7">
  <model name="cansat">

  <plugin
        filename="libignition-gazebo-odometry-publisher-system.so"
        name="ignition::gazebo::systems::OdometryPublisher">
        <odom_publish_frequency>50</odom_publish_frequency>
        <topic>cansat/odom</topic>
        <odom_frame>world</odom_frame>
        <robot_base_frame>body</robot_base_frame>
    </plugin> 
    <link name="body">
      <pose>0 0 0.0575 0 0 0</pose>
        <inertial>
          <mass>0.9472    </mass><inertia>
            <ixx>0.002317 </ixx> <ixy>0       </ixy> <ixz>0         </ixz>
            <ixy>0        </ixy> <iyy>0.002317</iyy> <iyz>0         </iyz> 
            <ixz>0        </ixz> <iyz>0.0000  </iyz> <izz>0.0001072 </izz>
          </inertia>
        </inertial>
      <visual name="body_visual">
        <geometry><cylinder><radius>0.095</radius><length>0.15</length></cylinder></geometry>
        <material><ambient>0 0 1 1</ambient><diffuse>0 0 1 1</diffuse></material>
      </visual>
      <collision name="body_collision">
        <geometry><cylinder><radius>0.095</radius><length>0.15</length></cylinder></geometry>
      </collision>
      <sensor name="camera_down" type="camera">
        <pose>0 0 -0.005 0 1.5708 0</pose>
        <visualize>true</visualize>
        <update_rate>30</update_rate>
        <topic>cansat/camera/image</topic> <camera>
          <horizontal_fov>1.047</horizontal_fov> <image>
            <width>1280</width>
            <height>720</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.01</near>
            <far>100</far>
          </clip>
        </camera>
      </sensor>
      <sensor name="imu_sensor" type="imu">
        <always_on>1</always_on>
        <update_rate>100</update_rate>
        <topic>cansat/imu</topic>
      </sensor>
      
    </link>


    <link name="parafoil">
      <pose>0 0 0.4 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia><ixx>0.01</ixx><iyy>0.01</iyy><izz>0.01</izz></inertia>
      </inertial>
      <visual name="parafoil_visual">
        <geometry><box><size>0.6 0.3 0.01</size></box></geometry>
        <material><ambient>1 0 0 1</ambient><diffuse>1 0 0 1</diffuse></material>
      </visual>

    <plugin
        filename="ignition-gazebo-liftdrag-system"
        name="ignition::gazebo::systems::LiftDrag">
        <a0>0.0</a0>
        <cla>4.0</cla>
        <cda>0.165</cda>
        <cp>0 0 0</cp>
        <area>1.02</area>
        <air_density>1.107</air_density>
        <forward>1 0 0</forward>
        <upward>0 0 1</upward>
        <link_name>parafoil</link_name>
      </plugin>
    </link>

    <joint name="parafoil_joint" type="ball">
      <parent>body</parent>
      <child>parafoil</child>
    </joint>



  </model>
</sdf>
