<?xml version="1.0" ?>
<sdf version="1.7">
  <model name="cansat">
    
    <plugin name="p3d_base_controller" filename="libgazebo_ros_p3d.so">
      <ros>
        <namespace>/cansat</namespace>
        <remapping>odom:=odom</remapping>
      </ros>
      <body_name>body</body_name>
      <frame_name>world</frame_name>
      <update_rate>50.0</update_rate>
      <xyz_offset>0 0 0</xyz_offset>
      <rpy_offset>0 0 0</rpy_offset>
      <gaussian_noise>0.01</gaussian_noise>
    </plugin>

    <link name="body">
      <pose>0 0 0 0 0 0</pose>

      <inertial> 
          <mass>0.9472</mass>
        <inertia>
            <ixx>0.05</ixx>  <ixy>0</ixy> <ixz>0</ixz>
            <iyy>0.05</iyy>  <iyz>0</iyz>
            <izz>0.43</izz>
        </inertia>
      </inertial>
      
      
      <visual name="body_visual">
        <geometry><cylinder><radius>0.095</radius><length>0.15</length></cylinder></geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Blue</name>
          </script>
        </material>
      </visual>
      
      <collision name="body_collision">
        <geometry><cylinder><radius>0.095</radius><length>0.15</length></cylinder></geometry>
      </collision>

      <sensor name="camera_down" type="camera">
        <pose>0 0 -0.075 0 1.5708 0</pose> 
        <visualize>true</visualize>
        <update_rate>30</update_rate>
        <camera>
          <horizontal_fov>1.047</horizontal_fov> 
          <image><width>1280</width><height>720</height><format>R8G8B8</format></image>
          <clip><near>0.01</near><far>1000</far></clip>
        </camera>
        <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
          <ros>
            <namespace>/cansat</namespace>
            <remapping>image_raw:=camera/image</remapping>
            <remapping>camera_info:=camera/camera_info</remapping>
          </ros>
          <frame_name>body</frame_name> </plugin>
      </sensor>

      <sensor name="imu_sensor" type="imu">
        <always_on>true</always_on>
        <update_rate>100</update_rate>
        <plugin name="imu_plugin" filename="libgazebo_ros_imu_sensor.so">
          <ros>
            <namespace>/cansat</namespace>
            <remapping>~/out:=imu</remapping>
          </ros>
          <initial_orientation_as_reference>false</initial_orientation_as_reference>
        </plugin>
      </sensor>
    </link>

    <link name="parafoil_left">
      <pose>0 0.55 0.1 0 0 0</pose> 
      <inertial>
        <mass>0.048</mass> <inertia>
          <ixx>0.019</ixx> <iyy>0.0025</iyy> <izz>0.0215</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry><box><size>0.82 1.1 0.001</size></box></geometry>
        <material><script><name>Gazebo/Red</name></script></material>
      </visual>
      <collision name="collision">
        <geometry><box><size>0.82 1.1 0.001</size></box></geometry>
      </collision>
    </link>

    <joint name="joint_left" type="revolute">
      <parent>body</parent>
      <child>parafoil_left</child>
      <axis>
        <xyz>0 1 0</xyz> <limit><lower>-1.0</lower><upper>1.0</upper></limit>
        <dynamics><damping>0.5</damping></dynamics>
      </axis>
    </joint>

    <plugin name="lift_drag_left" filename="libLiftDragPlugin.so">
      <a0>0.0</a0>
      <cla>0.4</cla> <cda>0.165</cda> <cma>0.0</cma>
      <alpha_stall>0.33</alpha_stall> <cla_stall>-0.2</cla_stall>
      <cda_stall>1.0</cda_stall>
      <cp>0 0.55 0</cp> <area>0.9</area>  <air_density>1.225</air_density>
      <forward>1 0 0</forward> <upward>0 0 1</upward>
      <link_name>parafoil_left</link_name>
    </plugin>

    <link name="parafoil_right">
      <pose>0 -0.55 0.1 0 0 0</pose> 
      <inertial>
        <mass>0.048</mass>
        <inertia>
          <ixx>0.019</ixx> <iyy>0.0025</iyy> <izz>0.0215</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry><box><size>0.82 1.1 0.001</size></box></geometry>
        <material><script><name>Gazebo/Green</name></script></material>
      </visual>
      <collision name="collision">
        <geometry><box><size>0.82 1.1 0.001</size></box></geometry>
      </collision>
    </link>

    <joint name="joint_right" type="revolute">
      <parent>body</parent>
      <child>parafoil_right</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-1.0</lower><upper>1.0</upper></limit>
        <dynamics><damping>0.5</damping></dynamics>
      </axis>
    </joint>

    <plugin name="lift_drag_right" filename="libLiftDragPlugin.so">
      <a0>0.0</a0>
      <cla>0.4</cla> <cda>0.165</cda>
      <cp>0 -0.55 0</cp> <area>0.9</area>
      <forward>1 0 0</forward> <upward>0 0 1</upward>
      <link_name>parafoil_right</link_name>
    </plugin>

    <plugin name="left_arm_force" filename="libgazebo_ros_force.so">
      <ros>
        <namespace>/cansat</namespace>
        <remapping>gazebo_ros_force:=left_arm_cmd</remapping>
      </ros>
      <link_name>parafoil_left</link_name>
      <force_frame>link</force_frame>
    </plugin>

    <plugin name="right_arm_force" filename="libgazebo_ros_force.so">
      <ros>
        <namespace>/cansat</namespace>
        <remapping>gazebo_ros_force:=right_arm_cmd</remapping>
      </ros>
      <link_name>parafoil_right</link_name>
      <force_frame>link</force_frame>
    </plugin>

  </model>
</sdf>